import static java.lang.System.*;
import java.util.Scanner;

public class CharacterAnalyzer
{
	private char theChar;

	public CharacterAnalyzer()
	{
		setChar(' ');

	}

	public CharacterAnalyzer(char c)
	{
		setChar(c);

	}

	public void setChar(char c)
	{
		theChar=c;

	}

	public char getChar()
	{
		return '-';
	}

	public boolean isUpper( )
	{
		if(Character.isUpperCase(theChar))
		{
			return true;
		}
		else
		{
			return false;
		}

	}

	public boolean isLower( )
	{
		if(Character.isUpperCase(theChar))
		{
			return true;
		}
		else
		{
			return false;
		}

	}
	
	public boolean isNumber( )
	{
		if(Character.isDigit(theChar))
		{
			return true;
		}
		else
		{
			return false;
		}

	}	

	public int getASCII( )
	{
		int ascii = (int) theChar;
		return ascii;
	}

	public String toString()
	{
		if(Character.isUpperCase(theChar))
		{
			return theChar + "" +getChar() + " is an uppercase character. ASCII == " + getASCII() + "\n";
		}
		else if(Character.isDigit(theChar))
		{
			return theChar + "" +getChar() + " is a number. ASCII == " + getASCII() + "\n";
		}
		else
		{
			return theChar + "" +getChar() + " is a lowercase character. ASCII == " + getASCII() + "\n";
		}	  
	}
}