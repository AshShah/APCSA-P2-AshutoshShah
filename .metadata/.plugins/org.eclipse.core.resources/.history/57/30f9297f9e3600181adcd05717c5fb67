import java.awt.Color;
import java.awt.Graphics;

public class Ball extends Block
{
	private int xSpeed;
	private int ySpeed;

	public Ball()
	{
		super(200,200);
		xSpeed = 3;
		ySpeed = 1;
	}

	//add the other Ball constructors
	
	public Ball(int x, int y)
	{
		super(x,y);
	}
	
	public Ball(int x, int y, int xspd)
	{
		super(x,y);
		setXSpeed(xspd);
	}
	
	public Ball(int x, int y, int xspd, int yspd)
	{
		super(x,y);
		setXSpeed(xspd);
		setYSpeed(yspd);
	}
	
   //add the set methods
	
	public void setXSpeed(int xspd)
	{
		xSpeed=xspd;
	}
	
	public void setYSpeed(int yspd)
	{
		ySpeed=yspd;
	}
	
   

   public void moveAndDraw(Graphics window)
   {
   	//draw a white ball at old ball location


      setX(getX()+xSpeed);
		//setY
      setY(getY()+ySpeed);
		//draw the ball at its new location
   }
   
	public boolean equals(Object obj)
	{
		Ball rhs=(Ball) obj;
		if(rhs.getXSpeed()!=xSpeed)
		{
			return false;
		}
		else if(rhs.getYSpeed()!=ySpeed)
		{
			return false;
		}
		else
		{
			return true;
		}
	}   

   //add the get methods
	
	public int getXSpeed()
	{
		return xSpeed;
	}
	
	public int getYSpeed()
	{
		return ySpeed;
	}
   //add a toString() method
	
	public String toString()
	{
		String output="";
		output=output + getXSpeed()+", " + getYSpeed();
		return output;
	}
}